system MyExample;

clocks
	clock;
	
gate
	Init;
	Wake;
	Procrastinate;
	FinishDay;	
	Produce;
	
process MyExample;
	
output
	Produce;
	
internal
	Init, Wake, Procrastinate, FinishDay;
	
variables
	sanidade: int;
	sono: int;	
	
state
	init : START;
	Acordar;
	Estudar;
	Dormir;

transition

	// Main Scenario
	from START
		sync Init()
		do sono := 0
	to Acordar;
	from Acordar
		if (sanidade > 0)
		sync Produce!()
	to Estudar;
	from Estudar
		when clock < 12
		sync Procrastinate()
	to Acordar;
	from Estudar
		when clock >= 12
		if (sono >= 10)
		sync FinishDay()
	to Dormir;
	from Dormir
		if (sono <= 0)
		sync Wake()
		do clock := 0
	to Acordar;
		
